// For format details, see https://aka.ms/devcontainer.json.
{
    "name": "ocaml devcontainers C-FFI example",
    "build":  {
        "dockerfile": "Dockerfile",
        "cacheFrom": [
            "ghcr.io/thecbah/ocaml-devcontainer/devcontainer:master"
        ]
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "false"
        },
        "./features/ocaml": {
            "packages": "utop"
        },
        "./features/apt-packages": {
            "packages": "file libc6-dev-i386 qemu-user time valgrind"
        },
        "./features/musl-cross": {
            "architectures": "aarch64 arm.eabi i386 x86_64"
        },
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ocamllabs.ocaml-platform"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": {
        "opam": "sudo sh -ceux \"chown -R $(id -u):$(id -g) ${OPAMROOT}/log\"",
        "submodules": "git submodule update --recursive --init --depth=1"
    },
    "waitFor": "postCreateCommand"
}
